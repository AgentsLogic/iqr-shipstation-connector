# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies including dev
RUN npm ci

# Copy TypeScript config
COPY tsconfig.json ./

# Copy source (will be overridden by volume mount)
COPY src ./src

# Expose the application port
EXPOSE 3000

# Start with hot reload
CMD ["npm", "run", "dev"]

