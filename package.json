{
  "name": "iqr-shipstation-connector",
  "version": "1.0.0",
  "description": "Integration connector between IQ Reseller and ShipStation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node run-all-tests.js",
    "test:iqr": "node test-iqr-auth-simple.js",
    "test:shipstation": "node test-shipstation-auth.js",
    "test:sync": "node test-manual-sync.js",
    "status": "node check-status.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t iqr-shipstation-connector .",
    "docker:run": "docker run -p 3000:3000 --env-file .env iqr-shipstation-connector",
    "docker:dev": "docker-compose --profile dev up connector-dev",
    "docker:prod": "docker-compose up -d connector",
    "build:exe": "npm run build && pkg . --targets node18-win-x64 --output build/IQR-ShipStation-Connector.exe",
    "build:installer": "powershell -ExecutionPolicy Bypass -File build-installer.ps1",
    "build:all": "npm run build:exe && npm run build:installer"
  },
  "bin": "dist/index.js",
  "pkg": {
    "assets": [
      ".env.example"
    ],
    "outputPath": "build"
  },
  "keywords": [
    "iqreseller",
    "shipstation",
    "integration",
    "connector",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "compression": "^1.7.4",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
